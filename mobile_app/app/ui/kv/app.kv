#:kivy 2.3.0

<ContainerHost@BoxLayout>:
    orientation: "vertical"
    spacing: "12dp"
    padding: "16dp"

<RoundedCard@BoxLayout>:
    bg_color: (1, 1, 1, 1)
    padding: "16dp"
    spacing: "8dp"
    canvas.before:
        Color:
            rgba: self.bg_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(18, 18), (18, 18), (18, 18), (18, 18)]

<SoftTile@BoxLayout>:
    bg_color: (.97, .97, .98, 1)
    padding: "14dp"
    spacing: "6dp"
    canvas.before:
        Color:
            rgba: self.bg_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(16, 16), (16, 16), (16, 16), (16, 16)]

<Pill@Label>:
    color: (.2, .25, .23, 1)
    font_size: "13sp"
    padding: ("10dp", "6dp")
    size_hint: (None, None)
    text_size: (self.texture_size[0], None)
    height: "28dp"
    width: self.texture_size[0] + dp(20)
    canvas.before:
        Color:
            rgba: (.96, .96, .97, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(14, 14), (14, 14), (14, 14), (14, 14)]

<IconCircle@BoxLayout>:
    bg_color: (.94, .96, .95, 1)
    size_hint: (None, None)
    size: "44dp", "44dp"
    canvas.before:
        Color:
            rgba: self.bg_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(20, 20), (20, 20), (20, 20), (20, 20)]

<TopBar@BoxLayout>:
    size_hint_y: None
    height: "56dp"
    spacing: "10dp"

<PrimaryButton@Button>:
    background_normal: ""
    background_down: ""
    color: (1, 1, 1, 1)
    font_size: "15sp"
    bold: True
    size_hint_y: None
    height: "48dp"
    canvas.before:
        Color:
            rgba: (.27, .42, .38, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(18, 18), (18, 18), (18, 18), (18, 18)]

<GhostButton@Button>:
    background_normal: ""
    background_down: ""
    color: (.2, .25, .23, 1)
    font_size: "15sp"
    size_hint_y: None
    height: "48dp"
    canvas.before:
        Color:
            rgba: (.95, .96, .97, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(18, 18), (18, 18), (18, 18), (18, 18)]

<AppRoot@BoxLayout>:
    orientation: "vertical"
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size