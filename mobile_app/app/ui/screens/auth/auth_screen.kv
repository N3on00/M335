<AuthScreen>:
    ContainerHost:
        BoxLayout:
            id: auth_header
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            spacing: "12dp"

        BoxLayout:
            id: auth_main
            orientation: "vertical"
            size_hint_y: 1
            spacing: "12dp"

        BoxLayout:
            id: auth_footer
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            spacing: "12dp"
